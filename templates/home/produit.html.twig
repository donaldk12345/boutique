{% extends 'base.html.twig' %}

{% block title %}Hello BoutiqueController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container-fluid ">
    <div class="row justify-content-center">
       <div class="col-12 col-sm-6 col-md-3 mt-3">
    <h1 style="text-align:center; color:purple; font-family:bold;" class="mt-4"></h1>
    {% if form is defined %}
     {{ form_start(form) }}
     {{ form_errors(form) }}
    {{ form_widget(form) }}
 <button type="submit" class="btn btn-raised shadow my-button w-xs cyan mt-4 col-md-12">Creer</button>
 {{ form_end(form) }}
 {% endif %}
 </div>
 </div>
 </div>
{% endblock %}
