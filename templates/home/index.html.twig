{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
.card .inner img{
    width:100%;
}
#facilities{
    padding: 30px 0px;


}
#facilities h1{
    font-weight:900;
    font-size:34px;
    padding-bottom:5px;
}
.title{
    text-align:center;
    padding: 25px 0px;
}
.card-body button{
  border-radius: 50px;
  margin-right: 15px;
  font-size: 11px;
  letter-spacing: 1px;
  text-transform: uppercase;
  padding: 14px 28px 13px 28px;
  background-color:#a0b4cf;
  border: none;
  margin-top: 10px;
  
}
.card-body button:hover{
  background-color:#A0B4CFC5;
}
.card-body button a{
    text-decoration:none;
    color:rgba(255, 255, 255, 0.788);
}
.card{
  margin:5px;
  box-shadow: 0 2px 6px rgba(58, 57, 68, 0.2);
    
}
.inner{
    overflow:hidden;
  }
  .inner img{
    transition: all 0.8s ease;
  }
  .inner:hover img{
    transform:scale(1.3);
  }

</style>
    <!-- header -->
    <header id = "header" class = "vh-100 carousel slide" data-bs-ride = "carousel" style = "padding-top: 104px;">
        <div class = "container h-100 d-flex align-items-center carousel-inner">
            <div class = "text-center carousel-item active">
                <h2 class = "text-capitalize text-white">best collection</h2>
                <h1 class = "text-uppercase py-2 fw-bold text-white">new arrivals</h1>
                <a href = "#" class = "btn mt-3 text-uppercase">shop now</a>
            </div>
            <div class = "text-center carousel-item">
                <h2 class = "text-capitalize text-white">best price & offer</h2>
                <h1 class = "text-uppercase py-2 fw-bold text-white">new season</h1>
                <a href = "#" class = "btn mt-3 text-uppercase">buy now</a>
            </div>
        </div>

        <button class = "carousel-control-prev" type = "button" data-bs-target="#header" data-bs-slide = "prev">
            <span class = "carousel-control-prev-icon"></span>
        </button>
        <button class = "carousel-control-next" type = "button" data-bs-target="#header" data-bs-slide = "next">
            <span class = "carousel-control-next-icon"></span>
        </button>
    </header>
    <!-- end of header -->
<div class="container">
 
     <div class="row">
        <div class="col-md-10 m-auto">
          <div class="row">
                  <div class="product-main">

            <h2 class="title">Nos meilleur produits</h2>

            <div class="product-grid">

             {% for produit in produits %}
              <div class="showcase pb-2">
              
                <div class="showcase-banner">
                  <img src="/images/produit/{{ produit.imagename }} " alt="Black Floral Wrap Midi Skirt" class="product-img default"
                    width="300" style="width:100%!important; height:40vh!important;">
                    {% if produit.promo %}
                         <p class="showcase-badge angle pink text-center">En promotion !</p>
                    {% endif %}
                  
                </div>
              
                <div class="showcase-content">
                  <a href="#" class="showcase-category">{{ produit.nom }}</a>
              
                  <h3>
                    <a href="#" class="showcase-title">{{ produit.description |u.truncate(30 ,'...')  }}</a>
                  </h3>
                <h5 class=" text showcase-title text-warning" style="color:;"> {{ produit.category.nom }}</h5>
                  
                  <div class="price-box">
                    <p class="price"> {{ produit.prix }}&nbsp;FCFA</p>
                    
                  </div>
                  <div class="">
                  <a href=" {{ path('card_add' , {'id': produit.id }) }} " class="add-cart-btn "><i class="fas fa-shopping-cart"></i>&nbsp;&nbsp;Add to cart</a>
                  </div>
              
                </div>
              
              </div>
                  {% endfor %}

      

            </div>

          </div>
              </div>
     </div>
   
</div>

</div>


{% endblock %}
